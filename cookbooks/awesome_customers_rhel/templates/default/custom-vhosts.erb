<% if @port  != 80 %>
 Listen <%= @port %>
<% end %>

<VirtualHost *:<%= @port %>>
 ServerAdmin webmaster@localhost

 DocumentRoot <%= @document_root %>
 <Directory />
  Options FollowSymLinks
  AllowOverride None
 </Directory>


 <Directory <%= @document_root %>>
  Options FollowSymLinks Indexes MultiViews
  AllowOverride None
  Order allow,deny
  allow from all
 </Directory>
</VirtualHost>
